    <script>

        $(function () {

            $('#btn').click(function () {
                $(this).hide();
            });

            //$('#btn').click(function () {
            //    $(this).css('background-color', 'red');
            //    $(this).css('color', 'white');
            //});


            //$('#btn').mouseenter(function () {
            //    $(this).css('background-color', 'red');
            //    $(this).css('color', 'white');
            //});

            //$('#btn').mouseleave(function () {
            //    $(this).css('background-color', 'seagreen');
            //    $(this).css('color', 'white');
            //});


            //it handles both mouseenter and mouseleave events

            $('#btn').hover(function () {
                $(this).css('background-color', 'red');
                $(this).css('color', 'white');
            }, function () {
                $(this).css('background-color', 'seagreen');
                $(this).css('color', 'white');
            });



        });

    </script>
